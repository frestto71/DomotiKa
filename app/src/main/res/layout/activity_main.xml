                                android:id="@+id/timeText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12:34"
                                android:textColor="#ffffff"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-condensed" />

