<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0d0d0d"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingBottom="30dp"
    android:paddingTop="100dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título + hora -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/logoText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DomotiKa"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#00FFE0"
                android:letterSpacing="0.05" />

            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#00FFE0"
                android:textSize="18sp"
                android:layout_marginStart="12dp"
                android:text="Cargando..." />
        </LinearLayout>

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecciona el tipo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#00FFE0"
            android:layout_marginBottom="16dp" />

        <!-- TARJETAS -->

        <!-- Tarjeta 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1e1e1e"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:elevation="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Productos WiFi"
                android:textColor="#00FFE0"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📡 Routers"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:paddingVertical="4dp"
                android:paddingLeft="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="💡 Luces WiFi"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:paddingVertical="4dp"
                android:paddingLeft="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔐 Cerraduras WiFi"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:paddingVertical="4dp"
                android:paddingLeft="6dp" />
        </LinearLayout>

        <!-- Tarjeta 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1e1e1e"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:elevation="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Productos Bluetooth"
                android:textColor="#00FFE0"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🎧 Bocinas"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:paddingVertical="4dp"
                android:paddingLeft="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🎮 Controles"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:paddingVertical="4dp"
                android:paddingLeft="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🖱️ Mouse"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:paddingVertical="4dp"
                android:paddingLeft="6dp" />
        </LinearLayout>

        <!-- Tarjeta 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1e1e1e"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:elevation="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Productos Infrarrojo"
                android:textColor="#00FFE0"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📺 TV"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:paddingVertical="4dp"
                android:paddingLeft="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📽️ Proyector"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:paddingVertical="4dp"
                android:paddingLeft="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="❄️ Clima"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:paddingVertical="4dp"
                android:paddingLeft="6dp" />
        </LinearLayout>

        <!-- Tarjeta 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1e1e1e"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:elevation="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Productos Usb"
                android:textColor="#00FFE0"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📺 TV"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:paddingVertical="4dp"
                android:paddingLeft="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📽️ Proyector"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:paddingVertical="4dp"
                android:paddingLeft="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="❄️ Clima"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:paddingVertical="4dp"
                android:paddingLeft="6dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
