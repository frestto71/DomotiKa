<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_main_gradient"
    android:padding="24dp"
    android:gravity="center">

    <!-- Título de la aplicación -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/control_por_infrarrojo"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-medium" />

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona el dispositivo que deseas controlar"
        android:textColor="@color/subtitle_gray"
        android:textSize="16sp"
        android:layout_marginBottom="48dp"
        android:gravity="center"
        android:fontFamily="sans-serif-light" />

    <!-- Container para los botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Botón Televisores -->
        <LinearLayout
            android:id="@+id/btn_televisores"
            android:layout_width="280dp"
            android:layout_height="80dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_tv_background"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true"
            android:elevation="4dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_tv"
                android:layout_marginEnd="16dp"
                app:tint="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TELEVISORES"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_forward"
                app:tint="@color/white" />

        </LinearLayout>

        <!-- Botón Proyectores -->
        <LinearLayout
            android:id="@+id/btn_proyectores"
            android:layout_width="280dp"
            android:layout_height="80dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_projector_background"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true"
            android:elevation="4dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_projector"
                android:layout_marginEnd="16dp"
                app:tint="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PROYECTORES"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_forward"
                app:tint="@color/white" />

        </LinearLayout>

        <!-- Botón Aires -->
        <LinearLayout
            android:id="@+id/btn_aires"
            android:layout_width="280dp"
            android:layout_height="80dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_ac_background"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true"
            android:elevation="4dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_ac"
                android:layout_marginEnd="16dp"
                app:tint="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="AIRES ACONDICIONADOS"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_forward"
                app:tint="@color/white" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>