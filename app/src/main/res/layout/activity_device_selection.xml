<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_main_gradient"
    android:padding="24dp">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginBottom="32dp">

        <!-- Icon -->
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_tv"
            android:layout_marginBottom="16dp"
            app:tint="@color/white"
            android:alpha="0.9" />

        <!-- Título -->
        <TextView
            android:id="@+id/tv_selection_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecciona tu dispositivo"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <!-- Subtítulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elige la marca y modelo de tu dispositivo"
            android:textColor="@color/subtitle_gray"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"
            android:textAlignment="center" />

    </LinearLayout>

    <!-- Vista de carga mejorada -->
    <LinearLayout
        android:id="@+id/loading_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="visible">

        <!-- Card para loading -->
        <androidx.cardview.widget.CardView
            android:layout_width="280dp"
            android:layout_height="200dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="32dp"
            app:cardBackgroundColor="@color/surface_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp">

                <!-- Progress bar más grande -->
                <ProgressBar
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginBottom="24dp"
                    android:indeterminateTint="@color/primary_color" />

                <!-- Texto de carga -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descargando códigos IR..."
                    android:textColor="@color/primary_text_color"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Por favor espera un momento"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-light"
                    android:textAlignment="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Container para lista mejorada -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_devices_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/surface_color"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Header de la lista -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@color/primary_color"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_info"
                    android:layout_marginEnd="12dp"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dispositivos disponibles"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Lista con mejor diseño -->
            <ListView
                android:id="@+id/lv_devices"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:clipToPadding="false"
                android:divider="@color/divider_color"
                android:dividerHeight="1dp"
                android:choiceMode="singleChoice"
                android:fadeScrollbars="false"
                android:scrollbars="vertical"
                android:scrollbarStyle="outsideOverlay"
                android:fadingEdgeLength="16dp"
                android:requiresFadingEdge="vertical" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>