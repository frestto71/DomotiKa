<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cameraContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1A1A1A"
    android:padding="20dp">

    <!-- Card Encabezado -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#2E2E2E">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/titleCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“¹ CÃ¡mara de Seguridad"
                android:textColor="#4CAF50"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvStreamStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado: Desconectado"
                android:textColor="#BBBBBB"
                android:textSize="14sp"
                android:layout_marginBottom="12dp" />

            <!-- Indicador de streaming -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/statusIndicator"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/circle_indicator"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvStreamTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Vista de la cÃ¡mara -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#000000">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Surface para la cÃ¡mara -->
            <SurfaceView
                android:id="@+id/surfaceView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- Overlay cuando no hay cÃ¡mara -->
            <LinearLayout
                android:id="@+id/noCameraOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#222222"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“·"
                    android:textSize="64sp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Presiona 'Iniciar Stream' para comenzar"
                    android:textColor="#AAAAAA"
                    android:textSize="16sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Overlay de informaciÃ³n en vivo -->
            <LinearLayout
                android:id="@+id/liveOverlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="#80000000"
                android:orientation="horizontal"
                android:padding="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ”´ EN VIVO"
                    android:textColor="#FF4444"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvViewerCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘ 0 visores"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvResolution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="640x480"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Controles de cÃ¡mara flotantes -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabSwitchCamera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/ic_switch_camera"
                    app:backgroundTint="#4CAF50"
                    app:tint="@android:color/white"
                    app:fabSize="mini" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabFlashlight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_flashlight"
                    app:backgroundTint="#FFC107"
                    app:tint="@android:color/white"
                    app:fabSize="mini" />
            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- Controles principales -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartStream"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="â–¶ Iniciar Stream"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"
            app:backgroundTint="#4CAF50"
            app:cornerRadius="12dp"
            app:rippleColor="#2E7D32" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStopStream"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="â¹ Detener Stream"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:enabled="false"
            app:backgroundTint="#F44336"
            app:cornerRadius="12dp"
            app:rippleColor="#C62828" />
    </LinearLayout>

    <!-- Configuraciones avanzadas -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#2E2E2E">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âš™ï¸ Configuraciones"
                android:textColor="#4CAF50"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Calidad del video -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Calidad:"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spinnerQuality"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:background="@drawable/spinner_background" />
            </LinearLayout>

            <!-- Frecuencia de frames -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="FPS:"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <SeekBar
                    android:id="@+id/seekBarFPS"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:max="30"
                    android:progress="15"
                    android:progressTint="#4CAF50"
                    android:thumbTint="#4CAF50" />

                <TextView
                    android:id="@+id/tvFPSValue"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Botones adicionales -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSettings"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="âš™ Ajustes"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:layout_marginEnd="4dp"
                    app:backgroundTint="#607D8B"
                    app:cornerRadius="8dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnViewers"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="ðŸ‘ Visores"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    app:backgroundTint="#607D8B"
                    app:cornerRadius="8dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRecord"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="ðŸ“¹ Grabar"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"
                    app:backgroundTint="#E91E63"
                    app:cornerRadius="8dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>