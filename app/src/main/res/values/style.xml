<resources>
    <!-- Tema para el diálogo compacto y moderno -->
    <style name="CustomDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorPrimary">#064739</item>
        <item name="colorOnPrimary">#000000</item>

        <item name="android:textColorPrimary">#064739</item>
        <item name="android:textColorSecondary">#CCCCCC</item>
        <item name="android:textColorHighlight">#064739</item>

        <item name="android:background">@drawable/dialog_background</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>

        <item name="android:windowElevation">12dp</item>

        <!-- Padding interno reducido -->
        <item name="android:padding">4dp</item>

        <!-- Ancho mínimo reducido -->
        <item name="android:windowMinWidthMajor">200dp</item>
        <item name="android:windowMinWidthMinor">200dp</item>
    </style>

    <!-- Botones pequeños y sin mayúsculas -->
    <style name="CustomDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#00FFE0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">13sp</item>
        <item name="android:minHeight">28dp</item>
        <item name="android:minWidth">56dp</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
    </style>

    <!-- Texto de título más pequeño y ajustado -->
    <style name="CustomDialogTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">#00FFE0</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight">600</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <!-- Texto del contenido compacto -->
    <style name="CustomDialogBodyText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">#CCCCCC</item>
        <item name="android:textSize">13sp</item>
        <item name="android:lineSpacingExtra">1dp</item>
    </style>
</resources>
