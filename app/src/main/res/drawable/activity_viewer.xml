<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fitsSystemWindows="false">

    <!-- PANTALLA DE CONEXIÃ“N -->
    <LinearLayout
        android:id="@+id/connectionLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:background="@drawable/gradient_background"
        android:visibility="visible">

        <!-- Logo/TÃ­tulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“º"
            android:textSize="72sp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stream Viewer"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingresa el token del stream que quieres ver"
            android:textColor="#E0E0E0"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Card de conexiÃ³n -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="#2E2E2E">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”‘ Token del Stream"
                    android:textColor="#4CAF50"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <EditText
                    android:id="@+id/etToken"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Ej: MOD-123456-7890"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#AAAAAA"
                    android:background="@drawable/token_background"
                    android:padding="16dp"
                    android:fontFamily="monospace"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:inputType="textNoSuggestions"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnConnect"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="ðŸ”— Conectar"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="8dp"
                        app:backgroundTint="#4CAF50"
                        app:cornerRadius="28dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnStreams"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="ðŸ“‹ Streams"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp"
                        app:backgroundTint="#2196F3"
                        app:cornerRadius="28dp" />

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBack"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="â¬…ï¸ Volver"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    app:backgroundTint="#607D8B"
                    app:cornerRadius="24dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Lista de streams activos -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#2E2E2E">

            <LinearLayout
                android:id="@+id/streamsLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“¡ Streams Disponibles"
                    android:textColor="#4CAF50"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Los streams se agregarÃ¡n dinÃ¡micamente aquÃ­ -->

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- PANTALLA DE CARGA -->
    <LinearLayout
        android:id="@+id/loadingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#000000"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:indeterminateTint="#4CAF50"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”— Conectando al stream..."
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvLoadingStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Obteniendo primer frame..."
            android:textColor="#AAAAAA"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- IMAGEN DEL STREAM (PANTALLA COMPLETA) -->
    <ImageView
        android:id="@+id/imageStreamView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:background="#000000"
        android:visibility="gone" />

    <!-- CONTROLES OVERLAY -->
    <LinearLayout
        android:id="@+id/overlayControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:background="#80000000"
        android:padding="16dp"
        android:visibility="gone">

        <!-- InformaciÃ³n superior -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ”´ En vivo"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDisconnect"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="â¹ Desconectar"
                android:textColor="#ffffff"
                android:textSize="12sp"
                app:backgroundTint="#F44336"
                app:cornerRadius="20dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        </LinearLayout>

        <!-- InformaciÃ³n del stream -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvFPS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="FPS: 0"
                android:textColor="#E0E0E0"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvFrameCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Frames: 0"
                android:textColor="#E0E0E0"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvConnectionTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tiempo: 00:00"
                android:textColor="#E0E0E0"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- HINT PARA MOSTRAR CONTROLES -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="32dp"
        android:text="Toca la pantalla para mostrar/ocultar controles"
        android:textColor="#80FFFFFF"
        android:textSize="12sp"
        android:background="#80000000"
        android:padding="8dp"
        android:visibility="gone"
        android:id="@+id/tvHint" />

</FrameLayout>